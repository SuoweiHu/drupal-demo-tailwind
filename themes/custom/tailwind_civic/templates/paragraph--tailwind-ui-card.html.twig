{% set title    = content["field_tailwind_card_title"].0["#context"].value            %}
{% set subtitle = content["field_tailwind_card_subtitle"].0["#context"].value         %}
{% set image    = content["field_tailwind_card_image"].0["#media"]|file_uri|file_url  %}
<a href="#" class="group">
    <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
        <img src="{{image}}" class="h-full w-full object-cover object-center group-hover:opacity-75">
    </div>
    <p class="mt-4 mb-0 text-sm text-gray-700">              {{subtitle}}  </p>
    <p class="mt-1 text-lg font-medium text-gray-900">   {{title}}    </p>
</a>